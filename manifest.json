{
  "name": "看图班马甲账户切换",
  "version": "2.4.1",
  "manifest_version": 2,
  "description": "To make editor's life easier, this extension switch Kantuban users by pipelining logout, fillin password and login browser actions.",
  "icons": {"16": "img/icon.jpg",
            "48": "img/icon.jpg",
            "128": "img/icon.jpg"},
  "background" : {
    "scripts": ["background.js"]
  },
  "permissions": [
    	"storage",
		  "tabs",
		  "http://*.zhaohaowan.com/",
      "http://*.weibo.com/*",
      "https://*.weibo.com/*",
		  "unlimitedStorage"
  ],
  "page_action": {
    "default_title": "点击快速切换到其它马甲",
    "default_icon": "img/icon.jpg",
    "default_popup": "popup.html"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://www.zhaohaowan.com/*",
        "http://*.weibo.com/*"
      ],
      "js" : ["contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",  
  "options_page": "options.html"
}
